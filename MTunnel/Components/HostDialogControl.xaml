<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MTunnel.Components.HostDialogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MTunnel.Components"
    xmlns:localComponents="using:MTunnel.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="8">
        <TextBlock>Port:</TextBlock>
        <localComponents:PortTextBox x:Name="PortTextBox"/>

        <TextBlock>Protocol:</TextBlock>
        <ComboBox x:Name="ProtocolBox" SelectedIndex="0">
            <ComboBoxItem Content="tcp"/>
            <ComboBoxItem Content="udp"/>
        </ComboBox>
    </StackPanel>
</UserControl>
