<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MTunnel.Components.ButtonIconText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MTunnel.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Button
        x:Name="CreateButton"
        HorizontalAlignment="{x:Bind HorizontalAlignment}"
        Click="OnInternalButtonClick"
        Tag="{x:Bind Tag, Mode=OneWay}"
        Command="{x:Bind Command, Mode=OneWay}"
        CommandParameter="{x:Bind CommandParameter, Mode=OneWay}"
        IsEnabled="{x:Bind IsEnabled, Mode=OneWay}">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <FontIcon Glyph="{x:Bind IconGlyph}" FontSize="16" />
            <TextBlock Text="{x:Bind Content}" />
        </StackPanel>
    </Button>
</UserControl>
