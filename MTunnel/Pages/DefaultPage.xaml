<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MTunnel.Pages.DefaultPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MTunnel.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:pages="using:MTunnel.Pages"
    d:DataContext="{d:DesignInstance Type=pages:DefaultPageViewModel}"
    mc:Ignorable="d">

    <Grid
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Padding="24"
        Grid.Row="1">
        <StackPanel Spacing="12">
            <TextBlock
                FontSize="18"
                FontWeight="SemiBold">
                Enter a token to connect
            </TextBlock>

            <TextBlock TextWrapping="Wrap">
                If you just received a token, enter it here to connect to the server.
            </TextBlock>

            <Grid
                Width="{Binding ActualWidth, ElementName=RootContainer}"
                ColumnSpacing="12"
                HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="TokenTextBox"
                    Grid.Column="0"
                    PlaceholderText="Enter token here"
                    Text="{x:Bind ViewModel.Token, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <local:PortTextBox
                    x:Name="PortTextBox"
                    Grid.Column="1"/>
            </Grid>

            <local:ButtonIconText
                x:Name="ConnectButton"
                IconGlyph="&#xE71B;"
                IsEnabled="{x:Bind ViewModel.CanConnect, Mode=OneWay}"
                Click="ConnectButton_Click">
                Connect
            </local:ButtonIconText>

            <NavigationViewItemSeparator />

            <local:ButtonIconText
                x:Name="CreateButton"
                IconGlyph="&#xE72D;"
                Click="CreateButton_Click">
                Create a new Tunnel
            </local:ButtonIconText>

            <CheckBox
                x:Name="LogviewerCheckBox"
                Content="Enable logviewer"
                IsChecked="{x:Bind IsLogviewerOpen}"
                Checked="LogviewerEnable"
                Unchecked="LogviewerDisable"/>
        </StackPanel>
    </Grid>
</Page>
